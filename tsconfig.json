{
	"compilerOptions": {
		"allowJs": true,
		"target": "es5",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"declaration": true,
		"declarationDir": "dist/dts",
		"emitDeclarationOnly": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"strict": true
	},
	"include": [
		"./src/**/*",
		".eslintrc.cjs"
	]
}